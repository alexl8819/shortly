---
import Card from './Card.tsx';

interface CardInformation {
	title: string;
	icon: string,
	alt: string;
	description: string;
}

interface Props {
	cards: Array<CardInformation>;
}

const { cards } = Astro.props;
---

<ol class="mt-20 list-none">
	{ 
		cards.map((cardInfo: CardInformation, index: number) => <Card client:only="react" id={index} title={cardInfo.title} icon={cardInfo.icon} alt={cardInfo.alt} description={cardInfo.description} />) 
	}
</ol>
