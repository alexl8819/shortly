---
import Card from './Card.tsx';

interface CardInformation {
	title: string;
	icon: string,
	alt: string;
	description: string;
}

interface Props {
	cards: Array<CardInformation>;
}

const { cards } = Astro.props;
---
<div class="lg:mt-0 mt-40 lg:max-h-[36.563rem] relative flex flex-col justify-center items-center">
	<div class="z-0 relative bg-cyan lg:rotate-90 w-[0.5rem] h-[60rem]"></div>
	<ol class="z-10 absolute list-none w-full flex lg:flex-row flex-col">
		{ 
			cards.map((cardInfo: CardInformation, index: number) => <Card client:visible id={index} title={cardInfo.title} icon={cardInfo.icon} alt={cardInfo.alt} description={cardInfo.description} />) 
		}
	</ol>
</div>
